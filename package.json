{
    "name": "vk-project",
    "version": "0.0.1",
    "description": "Web Interface for VK Project",
    "keywords": [
        "vk",
        "vkui",
        "subscribers"
    ],
    "engines": {
        "node": "v10.15.x",
        "npm": "5.10.x"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/mvshmakov/vk-project.git"
    },
    "bugs": {
        "url": "https://github.com/mvshmakov/vk-project/issues"
    },
    "homepage": "https://vk.com/vk-project",
    "main": "express.js",
    "scripts": {
        "postinstall": "cd ./node_modules && ln -sfn ../src @",
        "bootstrap": "npm i && npm run start",
        "bootstrap:prod": "npm i && npm run start:prod",
        "start": "webpack-dev-server --config=configs/webpack/development.js",
        "start:debug": "export DEBUG='express:*' && npm run start",
        "start:prod": "npm run build && node express.js",
        "build": "npm run lint && npm run clean:dist && webpack -p --config=configs/webpack/production.js",
        "bundle-analyzer": "export BUNDLE_ANALYZER=true && webpack --config=configs/webpack/development.js",
        "clean": "rm -rfd node_modules webpack-bundle-analyzer.html && npm run clean:dist",
        "clean:dist": "rm -rfd dist",
        "lint": "tslint './src/**/*.ts*' --format stylish --force --fix",
        "test": "exit 0 && jest --watch --coverage --config=configs/jest.json"
    },
    "dependencies": {
        "@vkontakte/icons": "^1.4.3",
        "@vkontakte/vkui": "^2.21.2",
        "@vkontakte/vkui-connect": "^1.1.3",
        "@vkontakte/vkui-connect-promise": "^0.1.19",
        "connected-react-router": "^6.4.0",
        "history": "^4.9.0",
        "js-cookie": "^2.2.0",
        "normalizr": "^3.3.0",
        "query-string": "^6.4.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.0.2",
        "react-router": "^5.0.0",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.5",
        "redux-saga": "^1.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@types/jest": "^24.0.11",
        "@types/js-cookie": "^2.2.2",
        "@types/node": "^11.13.6",
        "@types/react": "^16.8.14",
        "@types/react-dom": "^16.8.4",
        "@types/react-redux": "^7.0.8",
        "@types/react-router": "^4.4.5",
        "@types/redux-actions": "^2.6.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "express": "^4.16.4",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "image-webpack-loader": "^4.6.0",
        "jest": "^24.7.1",
        "node-sass": "^4.11.0",
        "react-hot-loader": "^4.8.4",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "tslint": "^5.16.0",
        "typescript": "^3.4.4",
        "uglifyjs-webpack-plugin": "^2.1.2",
        "webpack": "^4.30.0",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.1",
        "webpack-config": "^7.5.0",
        "webpack-dev-middleware": "^3.6.2",
        "webpack-dev-server": "^3.3.1",
        "webpack-merge": "^4.2.1"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
